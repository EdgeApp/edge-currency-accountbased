{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "lib",
    "emitDeclarationOnly": true,
    "sourceRoot": "src",
    "sourceMap": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es2017",
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["./src/**/*", "./test/**/*", "./supressLintErrors.ts", "./supressTsErrors.ts"],
  "exclude": ["./node_modules/**/*", "./lib/**/*"]
}
